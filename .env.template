# Service URLs (for inter-service communication)
# Use container names for Docker networking
AUTH_SERVICE_URL=http://auth-service:8001
ORGANIZATION_SERVICE_URL=http://organization-service:8002
TASKS_SERVICE_URL=http://tasks-service:8003
PROJECTS_SERVICE_URL=http://projects-service:8004
EMAIL_SERVICE_URL=http://email-service:8005


# Database (SECRET - from GitHub Secrets)
DATABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_URL=
# JWT Configuration (SECRET - from GitHub Secrets)
SECRET_KEY=
REFRESH_SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (Non-secret - defaults)
REDIS_HOST=auto
REDIS_PORT=6379
REDIS_DB=0

# SMTP (User/Password are SECRET, rest are defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@taskuno.com
SMTP_USE_TLS=true

# CORS (Non-secret - default)
# Add or update CORS_ORIGINS to include your Vercel frontend
CORS_ORIGINS=http://localhost:3000,https://taskuno-frontend.vercel.app
# Queue (Non-secret - default)
QUEUE_NAME=task-events-queue

HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=production